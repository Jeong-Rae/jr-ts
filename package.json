{
  "name": "@lyght/ts",
  "version": "1.0.3",
  "description": "TypeScript utility",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build && npm test -- --run"
  },
  "keywords": [
    "Jeong-Rae",
    "utilities",
    "typescript"
  ],
  "author": "Jeong-Rae",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./math": {
      "types": "./dist/math/index.d.ts",
      "default": "./dist/math/index.js"
    },
    "./function": {
      "types": "./dist/function/index.d.ts",
      "default": "./dist/function/index.js"
    },
    "./*": {
      "types": "./dist/*",
      "default": "./dist/*"
    }
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.0.0"
  }
}
